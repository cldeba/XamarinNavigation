<?xml version="1.0" encoding="utf-8" ?>
<pages:ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:pages="clr-namespace:XamarinNavigation.Pages;assembly=XamarinNavigation"
                   xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:viewmodels="clr-namespace:XamarinNavigation.Playground.ViewModels"
                   mc:Ignorable="d"
             x:TypeArguments="viewmodels:Page2ViewModel"
             x:Class="XamarinNavigation.Playground.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Page2"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</pages:ContentPage>